{
  "name": "@saas-boilerplate/root",
  "packageManager": "yarn@3.2.0",
  "workspaces": [
    "services/*",
    "clients/*"
  ],
  "scripts": {
    "start": "yarn workspaces foreach --exclude @saas-boilerplate/root -vpi run start:dev",
    "check:lint": "yarn workspaces foreach --exclude @saas-boilerplate/root -vpi run check:lint",
    "test:ci": "yarn workspaces foreach --exclude @saas-boilerplate/root -vpi run test:ci"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  }
}
